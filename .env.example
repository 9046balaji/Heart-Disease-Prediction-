# Environment variables for HeartGuard application
# Copy this file to .env and fill in your actual values

# Server port
PORT=5001

# Frontend development port
VITE_PORT=3001

# API base URL for frontend
VITE_API_URL=http://localhost:5001/api

# Database connection string
DATABASE_URL=mysql://username:password@localhost:3307/heartguard

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Twilio credentials for SMS MFA
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# OpenAI API Key (if using AI features)
OPENAI_API_KEY=your_openai_api_key

# Test credentials
TEST_USERNAME=testuser123
TEST_PASSWORD=testpassword123
TEST_JWT_TOKEN=your_test_jwt_token_here